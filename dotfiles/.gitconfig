[user]
	name = ttarsi
[core]
	editor = nvim
	pager = bat --paging=always --decorations=always --pager='less -R'
[push]
	autoSetupRemote = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = true
[gpg]
	program = /opt/homebrew/bin/gpg
[include]
    path = ~/.gitconfig.local
